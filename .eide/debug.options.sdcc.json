{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [
        {
            "name": "clean",
            "command": "cd \"${OutDir}\" && del *.sym *.cdb *.adb *._*"
        }
    ],
    "global": {
        "device": "mcs51",
        "optimize-type": "speed",
        "device-options": {
            "mcs51": [
                "--model-small",
                "--xram-size 0x0400",
                "--code-size 0x3800"
            ]
        }
    },
    "c/cpp-compiler": {
        "language-c": "c99",
        "misc-controls": "--disable-warning 182"
    },
    "asm-compiler": {},
    "linker": {
        "$mainFileName": "main",
        "output-format": "hex",
        "misc-controls": "--xram-loc 0x0000 --xram-size 0x2000"
    }
}